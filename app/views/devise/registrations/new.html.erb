<h2 class='pt-12 pb-3 px-6'>Sign up</h2>

<div class='pb-12 px-6'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>

    <div class='field py-4 font-semibold'>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'input-border' %>
    </div>

    <div class='field py-4 font-semibold'>
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: 'new-password', class: 'input-border' %>
    </div>

    <div class='field py-4 font-semibold'>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'input-border' %>
    </div>

    <div class='field py-6 font-semibold'>
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, autofocus: true, class: 'input-border' %>
    </div>

    <div class='field font-semibold'>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, autofocus: true, class: 'input-border' %>
    </div>

    <div class='actions py-6'>
      <%= f.submit 'Sign up ğŸ’ª', class: 'hover-pointer py-2 px-4 bg-blue-500 rounded-md font-semibold' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
